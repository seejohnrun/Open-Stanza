%html

  %head
    %title= page_title
    = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    /[if IE]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/global.css', :media => 'screen, projection'
    = render :partial => 'global/analytics'

  %body

    #wrapper 

      #top
        = render :partial => 'global/menu'
        #site_name
          = link_to CONFIG[:site_name], root_url
        .clear

      = yield

      #footer
        == Site by #{CONFIG[:john_name]} -
        = mail_to CONFIG[:john_email], "#{CONFIG[:john_email]}"
        = '-'
        Powered by 
        = link_to 'Open Stanza', 'http://github.com/seejohnrun/Open-Stanza' 