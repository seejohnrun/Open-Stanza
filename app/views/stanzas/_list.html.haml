.stanza_list
  .name= name
  %ul
    - stanzas.each do |stanza|
      %li
        &#x2015;
        = link_to stanza.title, stanza
        - if show_author
          by
          = link_to stanza.user.public_name, stanza.user
        = "PRIVATE!" unless stanza.public?
    - if stanzas.empty?
      %em No Stanzas