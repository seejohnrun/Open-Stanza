%h1 Edit My Information

- form_for @user, :url => account_path do |f|
  
  = f.error_messages
 
  %br
  
  = f.label :email
  = f.text_field :email

  %br

  = f.label :display_name
  = f.text_field :display_name

  %br

  = f.label :password
  = f.password_field :password

  %br
 
  = f.label :password_confirmation
  = f.password_field :password_confirmation

  %br

  = f.submit 'Update'